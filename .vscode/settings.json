{
  "typescript.tsdk": "node_modules/typescript/lib",
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    { "language": "typescript", "autoFix": true },
    { "language": "typescriptreact", "autoFix": true }
  ],
  "files.exclude": {
    "**/.next": true
  },
  "search.exclude": {
    "**/.yarn": true,
    "yarn.lock": true
  },
  "playwright.env": {
    // Set to "false" not to use any pre-recorded response for API routes
    // during end-to-end tests
    "E2E_HAR": "true",
    "E2E_BASE_URL": "http://localhost:3000"
  }
}
