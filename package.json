{
  "name": "@visualize/site",
  "version": "0.4.0",
  "repository": "git@gitlab.ldbar.ch:interactivethings/visualization-tool.git",
  "author": "Jeremy Stucki <jeremy@interactivethings.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "DATABASE_URL=postgres://postgres@localhost:5432/visualization_tool next ./app",
    "dev:mitmproxy": "DATABASE_URL=postgres://postgres@localhost:5432/visualization_tool HTTP_PROXY=http://localhost:8080 NODE_EXTRA_CA_CERTS=~/.mitmproxy/mitmproxy-ca-cert.pem GLOBAL_AGENT_ENVIRONMENT_VARIABLE_NAMESPACE='' NO_PROXY='localhost,127.0.0.1' next ./app",
    "dev:rollup": "rollup -c rollup.config.js --watch",
    "db:migrate:dev": "DATABASE_URL=postgres://postgres@localhost:5432/visualization_tool scripts/db-migrate.js",
    "db:migrate": "scripts/db-migrate.js",
    "build": "NODE_OPTIONS=--max_old_space_size=2048 yarn graphql:codegen && lingui compile && rollup -c rollup.config.js && next build ./app",
    "start": "yarn db:migrate && GLOBAL_AGENT_ENVIRONMENT_VARIABLE_NAMESPACE='' NO_PROXY='localhost,127.0.0.1' NODE_EXTRA_CA_CERTS=./certs/proxywg.crt next start ./app -p $PORT",
    "lint": "tsc --noEmit -p ./app -p ./embed",
    "locales:extract": "lingui extract",
    "locales:compile": "lingui compile",
    "graphql:codegen": "graphql-codegen --config codegen.yml",
    "graphql:codegen:dev": "graphql-codegen --config codegen.yml --watch",
    "setup:dev": "yarn && yarn locales:compile && yarn db:migrate:dev",
    "preversion": "yarn lint",
    "postversion": "git push --follow-tags",
    "postinstall": "preconstruct dev"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.12.2",
    "@graphql-codegen/typescript": "^1.12.2",
    "@graphql-codegen/typescript-operations": "^1.12.2",
    "@graphql-codegen/typescript-resolvers": "^1.12.2",
    "@graphql-codegen/typescript-urql": "^1.12.2",
    "@lingui/cli": "^2.8.3",
    "@lingui/macro": "^2.8.3",
    "@mdx-js/loader": "^1.5.2",
    "@preconstruct/cli": "^1.1.7",
    "@rollup/plugin-json": "^4.0.2",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "@rollup/plugin-replace": "^2.3.1",
    "@types/d3-array": "^2.0.0",
    "@types/d3-axis": "^1.0.12",
    "@types/d3-delaunay": "^4.1.0",
    "@types/d3-dsv": "^1.0.36",
    "@types/d3-format": "^1.3.1",
    "@types/d3-scale": "^2.1.1",
    "@types/d3-scale-chromatic": "^1.3.1",
    "@types/d3-selection": "^1.4.1",
    "@types/d3-shape": "^1.3.2",
    "@types/d3-time-format": "^2.1.1",
    "@types/file-saver": "^2.0.1",
    "@types/graphql-type-json": "^0.3.2",
    "@types/lingui__core": "^2.7.0",
    "@types/lingui__macro": "^2.7.3",
    "@types/lingui__react": "^2.8.0",
    "@types/lodash": "^4.14.138",
    "@types/nanoid": "^2.0.0",
    "@types/node": "^12.12.20",
    "@types/pg": "^7.11.1",
    "@types/react": "^16.9.20",
    "@types/react-dom": "^16.9.4",
    "@types/theme-ui": "^0.3.0",
    "@types/theme-ui__components": "^0.2.2",
    "@typescript-eslint/eslint-plugin": "2.20.0",
    "@typescript-eslint/parser": "2.20.0",
    "babel-eslint": "10.x",
    "babel-plugin-macros": "^2.8.0",
    "eslint": "6.x",
    "eslint-config-react-app": "^5.2.0",
    "eslint-plugin-flowtype": "^4.3.0",
    "eslint-plugin-import": "2.20.1",
    "eslint-plugin-jsx-a11y": "6.x",
    "eslint-plugin-react": "7.18.3",
    "eslint-plugin-react-hooks": "2.4.0",
    "next": "^9.2.2",
    "prettier": "^1.18.2",
    "rollup": "^1.31.1",
    "rollup-plugin-analyzer": "^3.2.2",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-terser": "^5.1.3",
    "typescript": "^3.6.2"
  },
  "workspaces": [
    "app"
  ],
  "preconstruct": {
    "packages": [
      "app"
    ]
  }
}
